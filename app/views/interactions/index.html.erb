<p id="notice"><%= notice %></p>

<h1>Interactions</h1>

<table>
  <thead>
    <tr>
      <th>Ct num</th>
      <th>Do ref</th>
      <th>Type</th>
      <th>Date</th>
      <th>Contact</th>
      <th>Object</th>
      <th>Status</th>
      <th>Contact ct nb</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interactions.each do |interaction| %>
      <tr>
        <td><%= interaction.ct_num %></td>
        <td><%= interaction.do_ref %></td>
        <td><%= interaction.kind %></td>
        <td><%= interaction.date %></td>
        <td><%= interaction.contact %></td>
        <td><%= interaction.object %></td>
        <td><%= interaction.status %></td>
        <td><%= interaction.contact_ct_nb %></td>
        <td><%= interaction.summary %></td>
        <td><%= link_to 'Show', interaction %></td>
        <td><%= link_to 'Edit', edit_interaction_path(interaction) %></td>
        <td><%= link_to 'Destroy', interaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

