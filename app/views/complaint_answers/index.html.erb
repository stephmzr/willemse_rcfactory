<p id="notice"><%= notice %></p>

<h1>Complaint Answers</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Complaint kind</th>
      <th>Opinion</th>
      <th>Question number</th>
      <th>Extra info</th>
      <th>Summary text</th>
      <th>Coef</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complaint_answers.each do |complaint_answer| %>
      <tr>
        <td><%= complaint_answer.text %></td>
        <td><%= complaint_answer.complaint_kind %></td>
        <td><%= complaint_answer.opinion %></td>
        <td><%= complaint_answer.question_number %></td>
        <td><%= complaint_answer.extra_info %></td>
        <td><%= complaint_answer.summary_text %></td>
        <td><%= complaint_answer.coef %></td>
        <td><%= link_to 'Show', complaint_answer %></td>
        <td><%= link_to 'Edit', edit_complaint_answer_path(complaint_answer) %></td>
        <td><%= link_to 'Destroy', complaint_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

