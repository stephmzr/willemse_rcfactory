<div data-controller="table"
     data-table-id="<%= '#' + locals[:id] %>"
     data-table-dom="<%= locals[:dom] %>"
     data-table-paging="<%= locals[:paging] %>"
     data-table-info="<%= locals[:info] %>"
     data-table-searching="<%= locals[:searching] %>"
     data-table-ordering="<%= locals[:ordering] %>"
     data-table-order="<%= locals[:order] %>">

  <% if locals[:searching] || locals[:searching].nil? %>
    <div class="uk-margin uk-flex-right" uk-grid>
      <div class=" uk-width-1-1@s uk-width-1-3@m">
        <div class="uk-search uk-search-default uk-width-1-1">
          <span uk-search-icon></span>
          <%= text_field_tag :search, nil, class: 'uk-search-input', placeholder: 'Rechercher ...', data: { target: 'table.search', action: 'keyup->table#search' } %>
        </div>
      </div>
    </div>
  <% end %>

  <table id="<%= locals[:id] %>" class="stripe hover row-border nowrap">
    <%= yield %>
  </table>
</div>
